{
    "name": "vscode-coding-tracker",
    "displayName": "Coding Tracker",
    "description": "A coding activities tracker(time, file, type)",
    "version": "0.2.0",
    "license": "GPL-3.0",
    "publisher": "hangxingliu",
    "author": "hangxingliu",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": ["*"],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Coding Tracker configuration",
            "properties": {
                "codingTracker.uploadToken": {
                    "type": "string",
                    "default": "",
                    "description": "Your tracker server upload token"
                },
                "codingTracker.serverURL": {
                    "type": "string",
                    "default": "http://127.0.0.1:10345/",
                    "description": "Your tracker server URL"
                },
                "codingTracker.computerId": {
                    "type": "string",
                    "default": "",
                    "description": "Your computer id(you can recognize different computer in analyze result)(default value: 'unknown-${os.platform()}')"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hangxingliu/vscode-coding-tracker"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "install-tsd": "npm install @types/request",
        "start": "node ./node_modules/.bin/coding-tracker-server"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    },
    "keywords": [
        "vscode"
    ],
    "dependencies": {
        "fs-extra": "*",
        "vscode-coding-tracker-server": "^0.1.3"
    }
}